<!-- Modal -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="loginModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModal">Log In</h5>
      </div>
      <div class="modal-body">
        <form id="login-form" action="login" method="post">
          <div class="form-group">
            <label for="email">Email:</label>
            <input
              type="email"
              id="emailL"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof loginEmail != 'undefined' ? loginEmail : '' %>"
              required />
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input
              type="password"
              id="passwordL"
              name="password"
              class="form-control"
              placeholder="Enter Password"
              required />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" form="login-form" class="btn btn-primary">Login</button>
      </div>
    </div>
  </div>
</div>
